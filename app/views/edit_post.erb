<h2>Edit Post: <%=@post.caption%></h2>

<div class="container">
	<img class="secret_img" src="<%= @post.img_url %>">


  <form id="edit-form" action="/posts/<%=@post.id%>" method="post">
  	<input type="hidden" name="_method" value="patch">
    <div class="caption edit">
    	<input id="edit-caption" type="text" name="caption" value="<%=@post.caption%>">
    </div>
    <div class="edit-button">
    	<input class="button profile" type="submit" value="edit post">
    </div>

  </form>
</div>