<%= erb :navbar %>

<h2><%= @user.handle %>'s Profile:</h2>

<% if !@self %>
  <form action="/followers/new" method="post">
    <input type="hidden" name="id" value="<%=@user.id %>">
    <input type="submit" value="Follow">
  </form>
<% end %>

<% @posts.each do |post| %>
  <img src="<%= post.img_url %>">
  <p><%= post.caption %></p>
<% end %>
